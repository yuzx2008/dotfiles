# Make vim the default editor.
export EDITOR='vim';

# Increase Bash history size. Allow 32³ entries; the default is 500.
export HISTSIZE='32768';
export HISTFILESIZE="${HISTSIZE}";
# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';

# Prefer US English and use UTF-8.
#export LANG='en_US.UTF-8';
#export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Always enable colored `grep` output.
export GREP_OPTIONS='--color=auto';

export DOTFILES=$HOME/dotfiles

# add by yuzx
export USR_SERVER=/home/yuzx/server
export JAVA_HOME=/home/yuzx/server/jdk7
export ANT_HOME=/home/yuzx/server/ant
export GRADLE_HOME=/home/yuzx/server/gradle
export GROOVY_HOME=/home/yuzx/server/groovy
export MAVEN_HOME=/home/yuzx/server/maven
export MAVEN_OPTS="-Xms256m -Xmx512m"
export HADOOP_PREFIX=/home/yuzx/server/hadoop
export CLASSPATH=$CLASSPATH:$JAVA_HOME/lib:$JAVA_HOME/jre/lib
export NODE_HOME=/home/yuzx/server/node
export NODE_PATH=$NODE_HOME/lib/node_modules
export PATH=$PATH:$USR_SERVER/bin:$USR_SERVER/sbin
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$USR_SERVER/lib:/home/yuzx/server/mysql/lib
export PATH=$PATH:$JAVA_HOME/bin:$ANT_HOME/bin:$GRADLE_HOME/bin:$MAVEN_HOME/bin:$GROOVY_HOME/bin:$HADOOP_PREFIX/bin:$HADOOP_PREFIX/sbin
export PATH=$PATH:$NODE_HOME/bin:/home/yuzx/server/resin4/bin
export PKG_CONFIG_PATH=/home/yuzx/server/lib/pkgconfig:$PKG_CONFIG_PATH
umask 0000
export TERM=xterm-256color

