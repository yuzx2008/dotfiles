{
  "languageserver": {
    // 不要自己启动
    // "golang": {
    //   "command": "gopls",
    //   "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
    //   "filetypes": ["go"],
    //   "initializationOptions": {
    //     "usePlaceholders": true
    //   }
    // },
    "R": {
      "command": "/usr/bin/R",
      "args": ["--slave", "-e", "languageserver::run()"],
      "filetypes": ["r"]
    }
  },
  "codeLens.enable": true,
  "markdownlint.config": {
    "default": true,
    "line_length": false,
    "MD045": false,
    "MD024": false,
    "MD013": false,
    "MD046": false
  },
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.messageTarget": "float",
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "email": "languagetool",
    "markdown": ["write-good", "markdownlint"],
    "sh": "shellcheck",
    "elixir": ["mix_credo", "mix_credo_compile"],
    "eelixir": ["mix_credo", "mix_credo_compile"],
    "php": ["phpstan", "psalm"],
    "yaml": ["yamllint"],
    "cmake": ["cmake-lint", "cmakelint"],
    "systemd": "systemd-analyze"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "dart": "dartfmt",
    "elixir": "mix_format",
    "eelixir": "mix_format",
    "python": ["black", "isort"],
    "lua": "lua-format",
    "sh": "shfmt",
    "blade": "blade-formatter",
    "cmake": "cmake-format"
  },
  "explorer.file.column.indent.chars": " ",
  "explorer.width": 26,
  "explorer.file.child.template": "[indent][icon | 1] [filename omitCenter 1]",
  "go.enable": true,
  // 默认 true，调用 gopls -remote=auto 来创建 shared daemon
  "go.goplsUseDaemon": false,
  "go.checkForUpdates": "disabled",
  "go.goplsPath": "/home/yuzx/go/bin/gopls",
  "go.goplsArgs": [
    "-remote=127.0.0.1:60098",
    "-logfile=/tmp/gopls.log",
    "-debug=:0",
    "-rpc.trace"
  ],
  "go.goplsOptions": {
    "completeUnimported": true,
    "analyses": {
      "asmdecl": false,
      "embed": false,
      "directive": false,
      "assign": false,
      "fieldalignment": false,
      "unusedvariable": false,
      "unusedresult": false,
      "unusedwrite": false,
      "unusedparams": false,
      "unreachable": false,
      "buildtag": false,
      "cgocall": false,
      "stubmethods": false,
      "infertypeargs": false,
      "fillstruct": false,
      "undeclaredname": false,
      "noresultvalues": false,
      "nonewvars": false,
      "fillreturns": false
    }
  },
  "go.trace.server": "verbose",
  // 避免傻傻地去验证 prometheus.yaml
  "yaml.schemaStore.enable": false
  //"diagnostic.displayByAle": true,
